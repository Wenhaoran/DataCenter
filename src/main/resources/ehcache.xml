<?xml version="1.0" encoding="UTF-8"?>

<ehcache updateCheck="false" name="design_cache">
	<diskStore path="c://design_cache"/>  
	    <!-- 
       	 配置自定义缓存
        maxElementsInMemory：缓存中允许创建的最大对象数
        eternal：缓存中对象是否为永久的，如果是，超时设置将被忽略，对象从不过期。
        timeToIdleSeconds：缓存数据的钝化时间，也就是在一个元素消亡之前， 两次访问时间的最大时间间隔值，这只能在元素不是永久驻留时有效， 如果该值是 0 就意味着元素可以停顿无穷长的时间。
        timeToLiveSeconds：缓存数据的生存时间，也就是一个元素从构建到消亡的最大时间间隔值， 这只能在元素不是永久驻留时有效，如果该值是0就意味着元素可以停顿无穷长的时间。
        overflowToDisk：内存不足时，是否启用磁盘缓存。
        memoryStoreEvictionPolicy：缓存满了之后的淘汰算法。

    -->
    <defaultCache
            maxElementsInMemory="1000000"
            eternal="true"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"
            overflowToDisk="true"
            diskPersistent="true"
            diskExpiryThreadIntervalSeconds="120"
            />
    <!-- SYS cache. -->
	<cache name="searcherCache" maxEntriesLocalHeap="0" eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0" overflowToDisk="true" />
	<cache name="dicCache" maxEntriesLocalHeap="0" eternal="true" timeToIdleSeconds="60" timeToLiveSeconds="60" overflowToDisk="true" />
	<cache name="entityCache" maxEntriesLocalHeap="0" eternal="true" timeToIdleSeconds="60" timeToLiveSeconds="60" overflowToDisk="true" />
</ehcache>